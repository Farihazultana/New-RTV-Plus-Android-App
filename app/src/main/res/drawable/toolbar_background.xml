<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black color for shadow -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for the toolbar background -->
        </shape>
    </item>
</layer-list>
